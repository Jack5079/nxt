{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "watch": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "newLine": "lf",
    "alwaysStrict": true,
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "node_modules/"
  ]
}
